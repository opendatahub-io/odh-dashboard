{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "includeDependenciesAsInputs": {},
    "build": {
      "cache": false
    },
    "lint": {
      "inputs": ["$TURBO_DEFAULT$", "$TURBO_ROOT$/packages/eslint-config/**/*"]
    },
    "test-unit": {
      "dependsOn": ["^test-unit"]
    },
    "test-unit-coverage": {
      "dependsOn": ["^test-unit-coverage"],
      "outputs": ["jest-coverage/**"]
    },
    "type-check": {
      "dependsOn": ["^type-check"]
    },
    "test:contract:with-bff": {
      "inputs": [
        "$TURBO_DEFAULT$",
        "pact/**",
        "upstream/bff/**",
        "../pact-testing/**",
        "../plugin-core/**",
        "../tsconfig/**"
      ],
      "outputs": [
        "pact/pact-test-results/**"
      ]
    }
  }
}
