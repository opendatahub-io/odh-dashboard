{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020", "DOM"],
    "outDir": "./dist",
    "rootDir": "../../../../",
    "baseUrl": "../../../../",  // Added baseUrl to enable paths
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noImplicitReturns": false,
    "noImplicitThis": false,
    "types": ["jest", "node"],
    "typeRoots": ["../../../../node_modules/@types"],
    "paths": {
      "@odh-dashboard/contract-testing": ["packages/contract-tests/src"],
      "@odh-dashboard/contract-testing/*": ["packages/contract-tests/src/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "../cypress/**/*",
    "../src/__tests__/cypress/**/*",
    "../**/*.cy.ts",
    "../**/*.cy.tsx"
  ]
}