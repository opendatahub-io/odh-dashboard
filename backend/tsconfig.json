{
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": "./src",
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "paths": {
      "*": [
        "node_modules/*",
      ],
    },
    "lib": ["ES2023.Array"],
  },
  "include": ["**/*.ts", "**/*.tsx", "**/*.jsx", "**/*.js"],
  "exclude": [
    "node_modules"
  ]
}
