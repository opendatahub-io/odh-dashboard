{
  "private": true,
  "name": "@odh-dashboard/pact-testing",
  "description": "Shared utilities for Pact contract testing across ODH Dashboard packages.",
  "version": "0.0.0",
  "scripts": {
    "build": "tsc && mkdir -p dist/helpers && cp src/helpers/shell-helpers.sh dist/helpers/",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:contract": "jest --config jest.contract.config.js",
    "test:contract:watch": "jest --config jest.contract.config.js --watch",
    "test:contract:with-bff": "scripts/run-with-mock-bff.sh",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix"
  },
  "main": "./src/index.ts",
  "exports": {
    ".": "./src/index.ts"
  },
  "dependencies": {
    "@odh-dashboard/internal": "*",
    "axios": "^1.6.0",
    "ajv": "^8.12.0",
    "ajv-formats": "^2.1.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.13",
    "jest": "^29.7.0"
  }
}