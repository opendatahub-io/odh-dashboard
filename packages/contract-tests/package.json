{
  "private": true,
  "name": "@odh-dashboard/contract-testing",
  "description": "Shared utilities for contract testing across ODH Dashboard packages.",
  "version": "0.0.0",
  "bin": {
    "odh-contract-tests": "./scripts/run-consumer-with-mock-bff.sh",
    "odh-contract-report": "./scripts/generate-html-report.sh"
  },
  "scripts": {
    "build": "mkdir -p dist/helpers && cp src/helpers/shell-helpers.sh dist/helpers/",
    "test-unit": "jest",
    "test-unit:watch": "jest --watch",
    "test:contract": "jest --config jest.contract.config.js --detectOpenHandles",
    "test:contract:watch": "jest --config jest.contract.config.js --watch",
    "test:contract:with-bff": "scripts/run-with-mock-bff.sh",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "exports": {
    ".": "./src/index.ts"
  },
  "dependencies": {
    "ajv": "^8.12.0",
    "ajv-formats": "^2.1.1",
    "axios": "^1.6.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.13",
    "jest-html-reporters": "^3.1.7",
    "jest-junit": "^16.0.0",
    "ts-jest": "^29.1.1"
  },
  "peerDependencies": {
    "jest": "^29.0.0"
  },
  "overrides": {
    "jest": "^29.0.0"
  }
}
