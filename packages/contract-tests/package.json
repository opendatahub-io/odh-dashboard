{
  "name": "@odh-dashboard/contract-tests",
  "version": "1.0.0",
  "description": "Zero-config contract testing for ODH Dashboard packages",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc -p tsconfig.standalone.json",
    "type-check": "tsc -p tsconfig.json --noEmit",
    "test-unit": "jest --passWithNoTests",
    "test-unit:watch": "jest --watch --passWithNoTests",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "ajv": "^8.12.0",
    "ajv-formats": "^2.1.1",
    "jest-html-reporters": "^3.1.5"
  },
  "devDependencies": {
    "@odh-dashboard/eslint-config": "workspace:*",
    "@odh-dashboard/jest-config": "workspace:*",
    "@odh-dashboard/tsconfig": "workspace:*",
    "@types/node": "^20.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "ts-jest": "^29.0.0",
    "typescript": "^5.0.0"
  },
  "peerDependencies": {
    "jest": "^29.0.0"
  }
}
