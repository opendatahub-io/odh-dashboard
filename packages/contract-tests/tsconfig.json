{
  "extends": "@odh-dashboard/tsconfig/tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "allowImportingTsExtensions": false,
    "outDir": "./dist",
    "declaration": true,
    "declarationMap": true,
    "module": "commonjs",
    "target": "es2021",
    "moduleResolution": "node"
  },
  "include": ["src/**/*"],
  "exclude": ["dist", "node_modules", "**/*.test.ts", "**/*.spec.ts"]
}
