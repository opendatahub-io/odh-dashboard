{
  "name": "@odh-dashboard/contract-testing-base",
  "version": "1.0.0",
  "description": "Base configuration for contract testing modules",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:contract": "jest --config jest.contract.config.js",
